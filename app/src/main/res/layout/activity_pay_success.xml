<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pay_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="支付成功"
        android:textColor="@color/appColorImportantColor"
        android:textSize="@dimen/TitleTextSize"/>

    <View
        style="@style/DividerStyle">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="支付成功，我们将尽快安排发货。"
        android:textColor="#3c469c"
        android:textSize="@dimen/TitleTextSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_normal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="您的订单号:109196"
            android:textColor="@color/appColorImportantColorSub"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="已付金额:¥107.00元"
            android:textColor="@color/appColorImportantColorSub"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="收货地址:深圳市宝安区洪浪北110号"
            android:textColor="@color/appColorImportantColorSub"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_normal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="如有疑问，您可以拨打以下客服电话："
            android:textColor="@color/appColorLessImportantr"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:padding="3dp"
            android:text="联系方式：400-284-xxx"
            android:textColor="@color/appColorLessImportantr"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/shop_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pay_success_focused"
        android:gravity="center"
        android:text="继续购物"
        android:textColor="@color/white"
        android:textSize="@dimen/TitleTextSize"/>

    <TextView
        android:id="@+id/look_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/pay_success_normal"
        android:gravity="center"
        android:text="查看订单"
        android:textColor="@color/appColorImportantColorSub"
        android:textSize="@dimen/TitleTextSize"/>
</LinearLayout>
