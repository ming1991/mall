<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
    >


        <TextView
            android:textColor="@color/appColorLessImportantr"
            android:id="@+id/item_detail_product_comment_tv_num"
            android:text="评论(10)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/appColorImportantColor"
            android:layout_toLeftOf="@+id/item_detail_product_comment_iv_go"
            android:id="@+id/item_detail_product_comment_tv_des"
            android:text="好评100%"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/item_detail_product_comment_iv_go"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</RelativeLayout>