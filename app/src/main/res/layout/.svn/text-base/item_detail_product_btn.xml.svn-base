<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/item_detail_product_bt_tv_service"
        android:textColor="@color/appColorImportantColorSub"
        android:gravity="center"
        android:drawableTop="@drawable/fl"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="客服"
        />
    <TextView
        android:id="@+id/item_detail_product_bt_tv_collect"
        android:textColor="@color/appColorImportantColorSub"
        android:gravity="center"
        android:drawableTop="@drawable/detail_product_collect_selector"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="收藏"
        />

    <TextView
        android:id="@+id/item_detail_product_bt_tv_shop"
        android:textColor="@color/appColorImportantColorSub"
        android:gravity="center"
        android:drawableTop="@drawable/fk"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="购物车"
        />
    <TextView
        android:id="@+id/item_detail_product_bt_tv_joinShop"
        android:textColor="@color/appWhiteColor"
        android:gravity="center"
        android:background="#f06702"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="加入购物车"
        />
    <TextView
        android:id="@+id/item_detail_product_bt_tv_paying"
        android:textColor="@color/appWhiteColor"
        android:background="#ff3602"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="立即购买"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/item_detail_tv_index_num"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</RelativeLayout>