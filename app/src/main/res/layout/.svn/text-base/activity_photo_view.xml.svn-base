<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_photo_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_photoview_bg"
    >
    <TextView
        android:paddingTop="20dp"
        android:paddingRight="20sp"
        android:text="1/2"
        android:textSize="25sp"
        android:id="@+id/activity_photo_view_tv_pagePosition"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/activity_photo_view_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/activity_photo_view_tv_pagePosition"
       ></com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager>


</RelativeLayout>
