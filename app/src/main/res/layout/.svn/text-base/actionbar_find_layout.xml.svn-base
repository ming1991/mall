<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:paddingTop="5dp"
              android:background="@drawable/rect_back_border"
              android:paddingBottom="5dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/actionbar_home_layout_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/action_bar_scan_selector"/>

    <EditText
        android:id="@+id/actionbar_home_layout_edit_text"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/actionbar_texst_bg_shape"
        android:drawableLeft="@mipmap/actionbar_text_find"
        android:drawableRight="@mipmap/actionbar_text_voice"
        android:hint="搜索京东商品/店铺"
        android:textColorHint="#9c9c9c"/>

    <ImageView
        android:id="@+id/actionbar_message_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/action_bar_message_selector"/>
</LinearLayout>