<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/order_deliver_llt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/order_detail_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/fanhui"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="订单详情"
                        android:textColor="@color/appColorImportantColor"
                        android:textSize="18dp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/order_deliver_inquire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@mipmap/button_long_normal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="物流查询"
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="18dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="订单收货信息"
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="18dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/order_detail_rectangle"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="订单号:"/>

                        <TextView
                            android:id="@+id/order_id"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="收货人:"/>

                        <TextView
                            android:id="@+id/order_name"
                            style="@style/OrderDetail"
                            android:text="张三"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="电话:"/>

                        <TextView
                            android:id="@+id/order_phone"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="地址:"/>

                        <TextView
                            android:id="@+id/order_adress"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="订单状况："
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/order_detail_rectangle"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="订单状态:"/>

                        <TextView
                            android:id="@+id/order_state"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="送货方式:"/>

                        <TextView
                            android:id="@+id/order_deliveryType"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="支付方式:"/>

                        <TextView
                            android:id="@+id/order_paymentInfo"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="订单生成时间:"/>

                        <TextView
                            android:id="@+id/order_generateTime"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="是否开具发票:"/>

                        <TextView
                            android:id="@+id/order_invoiceInfo"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="发货时间:"/>

                        <TextView
                            android:id="@+id/order_deliver"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="发票抬头:"/>

                        <TextView
                            android:id="@+id/order_deliveryHead"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="发票内容:"/>

                        <TextView
                            android:id="@+id/order_deliveryContent"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/OrderTv"
                            android:text="送货要求:"/>

                        <TextView
                            android:id="@+id/order_deliveryRequest"
                            style="@style/OrderDetail"
                            android:text="12321321"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@mipmap/button_long_selected"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="商品清单"
                android:textColor="@color/appColorImportantColor"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="商品名称：韩版时尚蕾丝裙"
                android:textColor="#000"
                android:textSize="18dp"/>
<!--*******************************商品图片*****************************************-->
            <ImageView
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:id="@+id/order_detail_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_product_color"
                    style="@style/ProductDetail"
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/order_product_size"
                    style="@style/ProductDetailValue"
                    android:text="尺寸:32"
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="17dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_product_num"
                    style="@style/ProductDetail"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/order_product_price"
                    style="@style/ProductDetailValue"
                    android:text="价格:250"
                    android:textColor="@color/appColorImportantColor"
                    android:textSize="17dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/button_long_selected"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProductDetail"
                        android:text="数量总计:"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/order_product_total_num"
                        style="@style/ProductDetailValue"
                        android:text="1件"
                        android:textSize="17dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProductDetail"
                        android:text="原始金额:"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/order_product_total_price"
                        style="@style/ProductDetailValue"
                        android:text="128"
                        android:textSize="17dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProductDetail"
                        android:text="运费:"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/order_product_feight"
                        style="@style/ProductDetailValue"
                        android:text="10"
                        android:textSize="17dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProductDetail"
                        android:text="促销优惠金额:"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/order_product_privilege"
                        style="@style/ProductDetailValue"
                        android:text="30"
                        android:textSize="17dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        style="@style/ProductDetail"
                        android:text="应付金额:"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/order_product_meet"
                        style="@style/ProductDetailValue"
                        android:text="10"
                        android:textSize="17dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/order_detail_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/button_long_normal"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#fff"
                android:textSize="18dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
