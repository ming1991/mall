<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:paddingTop="5dp"
                android:background="@drawable/rect_back_border"
              android:paddingBottom="5dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/actionbar_home_layout_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/action_bar_scan_selector"/>

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/actionbar_discover_icon"
       />

    <ImageView
        android:id="@+id/actionbar_discover_layout_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/actionbar_message_iv"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/actionbar_discover_attention"/>

    <ImageView
        android:id="@+id/actionbar_message_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/action_bar_message_selector"/>
</RelativeLayout>