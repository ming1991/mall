<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/appWhiteColor"
              android:orientation="horizontal"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="5dp">

    <ImageView

        android:id="@+id/item_home_shopping_tab_iv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:src="@drawable/category1"/>

    <ImageView
        android:id="@+id/item_home_shopping_tab_iv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:src="@drawable/category2"/>

    <ImageView
        android:id="@+id/item_home_shopping_tab_iv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:src="@drawable/category3"/>

    <ImageView
        android:id="@+id/item_home_shopping_tab_iv4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:src="@drawable/category4"/>

    <ImageView
        android:id="@+id/item_home_shopping_tab_iv5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:src="@drawable/category5"/>


</LinearLayout>