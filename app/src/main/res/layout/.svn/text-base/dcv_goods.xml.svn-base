<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dcv_wheel_backe01"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <!--=======抽奖结果公布部分=======================-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/dcv_scroll_01"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.itheima31.jdmall.view.AutoVerticalScrollTextView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/textview_auto_roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#e6152d"
                android:padding="5dp"

                />

            <com.itheima31.jdmall.view.AutoVerticalScrollTextView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/textview_auto_roll2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#e6152d"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.itheima31.jdmall.view.AutoVerticalScrollTextView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/textview_auto_roll3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#e6152d"
                android:padding="5dp"

                />

            <com.itheima31.jdmall.view.AutoVerticalScrollTextView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/textview_auto_roll4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#e6152d"
                android:padding="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <!--抽奖盘=================-->
    <com.itheima31.jdmall.view.MyLotteryWheel
        android:layout_gravity="center_horizontal"
        android:id="@+id/lotterywheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        />

    <!--================跑马灯部分=======-->
    <com.itheima31.jdmall.view.AutoHorizontalScrollTextView
        android:layout_margin="10dp"

        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="#e6152d"
        android:textColor="#f9f6f6"
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="5dp"/>


</LinearLayout>